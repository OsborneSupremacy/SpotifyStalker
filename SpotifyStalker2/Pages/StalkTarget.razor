<p class="lead">You are stalking:</p>
<h2>
    <a target="_blank" href="https://open.spotify.com/user/@OwnerId"
        title="@OwnerId is @DisplayName's Spotify ID. Click to open their profile on Spotify.com" 
        class="badge badge-success">@OwnerId</a> @DisplayName
</h2>

@if (Processing.InProcess)
{
    <div class="alert alert-warning" role="alert">
        <span class="spinner-border spinner-border-sm" role="status">
            <span class="sr-only">Loading..</span>
        </span>
        <span>
            @Processing.Stage
        </span>
    </div>
}

@code {

    [Parameter]
    public string OwnerId { get; set; }

    [Parameter]
    public string DisplayName { get; set; }

    [Parameter]
    public (bool InProcess, string Stage) Processing { get; set; }
}
